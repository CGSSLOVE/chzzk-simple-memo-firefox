{
  "manifest_version": 3,
  "name": "치지직 스트리머 메모",
  "version": "1.1",
  "description": "스트리머 닉네임 옆에 원하는 정보를 메모하고 관리합니다.",

  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chzzk.naver.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://chzzk.naver.com/*"
      ],
      "js": [
        "browser-polyfill.js",
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "memo-for-chzzk@blbung.user",
      "strict_min_version": "109.0"
    }
  }
}